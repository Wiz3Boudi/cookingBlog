<div>
    <div>
        <h5 style="padding: 2rem;"> Search Result of '<%= searchText %>' </h5>
    </div>
    <div style="display: grid; grid-template-columns: 1fr 1fr 1fr 1fr; gap: 1rem; row-gap: 3rem;">
        <% if (sreachresult != '') { %>
            <% sreachresult.forEach((element, index) => { %>
                <div class="searchResult">
                    <a href="/recipe/<%= element.id %>" style="text-decoration: none;">
                        <img style="max-width:300px; width: 100%; max-height: 300px; height: 100%; border-radius: 5px;" src="/uploads/<%= element.image  %>" alt="">
                        <p style="padding: 1rem; text-align: center; color: darkslategrey;"> <%= element.name %> </p>
                    </a>
                </div>
        <% }); %>
        <% } else { %>
            <div>
                <p>No matches !</p>
            </div>
        <% } %>
    </div>
</div>